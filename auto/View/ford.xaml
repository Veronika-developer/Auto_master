<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="masterAutod.View.ford">
    <ContentPage.Content>
        <StackLayout Padding="15">
            <Label VerticalOptions="Center" HorizontalOptions="Center" TextColor="Black" FontSize="Large" Text="Модели машин марки Ford" />
            <Image x:Name="PhotosFord" Source="fordMustang.jpg" HeightRequest="250"/>
            <Picker x:Name="modelFord" SelectedIndexChanged="modelFord_SelectedIndexChanged">
                <Picker.Items>
                    <x:String>Ford Ranger</x:String>
                    <x:String>Ford Mustang</x:String>
                    <x:String>Ford Fiesta</x:String>
                    <x:String>Ford Focus</x:String>
                </Picker.Items>
            </Picker>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>