<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="masterAutod.View.Mercury">
    <ContentPage.Content>
        <StackLayout Padding="15">
            <Label VerticalOptions="Center" HorizontalOptions="Center" TextColor="Black" FontSize="Large" Text="Модели машин марки Mercury" />
            <Image x:Name="PhotosMercury" Source="Mercedes-AMGGT4.jpeg" HeightRequest="250"/>
            <Picker x:Name="modelMercury" SelectedIndexChanged="modelMercury_SelectedIndexChanged">
                <Picker.Items>
                    <x:String>Mercury Town Sedan</x:String>
                    <x:String>Mercury Colony Park</x:String>
                </Picker.Items>
            </Picker>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>